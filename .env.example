APP_NAME=Lectorix
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

# PostgreSQL Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=lectorix_db
DB_USERNAME=postgres
DB_PASSWORD=secret

# JWT Configuration
JWT_SECRET=
JWT_TTL=60

# Gemini AI Configuration (Opcional)
# Obtén tu API Key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TIMEOUT=30
# Solo para desarrollo en Windows con problemas SSL (NO usar en producción)
GEMINI_VERIFY_SSL=true

CACHE_DRIVER=file
QUEUE_CONNECTION=sync
